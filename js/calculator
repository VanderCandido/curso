<body>
    <h1> <font color="green">_____________CALCULADORA_____________</font> </h1>
    <script>
        
        var n1 = parseInt(prompt("Digite um Número: "));
        var oper = prompt("Deseja: \nsubtrair -\nsomar +\nmultiplicar *\ndividir /");
        var n2 = parseInt(prompt("Digite outro número: "));
        var resultado = 0;
        var resto = 0;

        switch(oper){
            case "+":
                resultado = n1 + n2;
                alert(resultado)
                break
            case "-":
                resultado = n1 - n2;
                alert(resultado)
                break
            case "*":
                resultado = n1 * n2;
                alert(resultado)
                break
            case "/":
                if (n2 == 0){
                    alert("Não é possivel dividir por zero")
                }
                else{
                    resultado = n1 / n2;
                    resto = n1 % n2
                    alert(resultado + "  o resto da divisão é " + resto)
                }
                break
            default:
                alert("Valor inválido!");
        }
    </script>
    
</body>
<h1> <font color="blue">_____________CALCULADORA_____________</font> </h1>
