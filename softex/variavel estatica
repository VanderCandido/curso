class POUPANÇA:

    POUPANÇA = 0

    def __init__(self,saldo):
        self.saldo = saldo
        POUPANÇA.total_contas += 1

    def deposita(self,valor):
        self.saldo += valor


poupança1  = POUPANÇA(float(input('Digite o valor do saldo inicial: ')))
print(f'Conta de nº {poupança1.total_contas}')
poupança1.deposita(float(input('Quanto deseja depositar? ')))
print(poupança1.saldo)

poupança2 = POUPANÇA(float(input('Digite o valor do saldo inicial: ')))
print(f'Conta de nº {poupança2.total_contas}')
poupança2.deposita(float(input('Quanto deseja depositar? ')))
print(poupança2.saldo)

poupança3 = POUPANÇA(float(input('Digite o valor do saldo inicial: ')))
print(f'Conta de nº {poupança3.total_contas}')
poupança3.deposita(float(input('Quanto deseja depositar? ')))
print(poupança3.saldo)
